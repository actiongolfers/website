<!DOCTYPE HTML>
<html lang="en" class="slim-header">
    <head>
        <title>Active Tournaments </title>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="images/fav.png">
        <link rel="apple-touch-icon" href="images/fav.png">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="library/css/admin.css" />
    </head>
    <body>
        <main>
            {{> landing-header }}

            <section>
                <div class="admin-container create-form-container">
                    <h2 class="page-header">Active Tournaments</h2>
                    <div class="screen-message error-message hide">
                        Something went wrong. We are working on getting this fixed as soon as we can. Please try later.
                    </div>

                    <div class="list-tournaments">
                        <div class="tournament-item loading">
                            <div class="tournament-id"># Tournament Id</div>
                            <div class="item">Friendly Name</div><br />
                            <div class="item">City</div><br />
                            <div class="item">Creator Name</div><br />
                            <div class="item">Golf Course Name</div><br />
                            <div class="item">Tee Name</div><br />

                            <div class="tournament-item-btm">
                                <div>Start Date</div>
                                <div>End Date</div>
                            </div>
                            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
                        </div>
                    </div>
                </div>
            </section>

            {{> landing-footer }}

        </main>
        <script type="text/x-handlebars-template" data-template="listTournamentsTemplate">
            \{{#if ownerTournaments}}
                \{{#each ownerTournaments}}
                    <div class="tournament-item">
                        \{{#if tournamentInfo.tournamentId}}
                        <a class="create-website" data-tournament-id="\{{tournamentInfo.tournamentId}}" data-friendly-name="\{{tournamentInfo.friendlyName}}"
                        data-start-date="\{{tournamentInfo.startDate}}"
                        data-end-date="\{{tournamentInfo.endDate}}"></a>
                        <div class="tournament-id"># \{{tournamentInfo.tournamentId}}</div>
                        \{{/if}}
                        \{{#if tournamentInfo.friendlyName}}
                        <div class="item">\{{tournamentInfo.friendlyName}}<span>Friendly Name</span></div>
                        <br />
                        \{{/if}}
                        \{{#if tournamentInfo.city}}
                        <div class="item">\{{tournamentInfo.city}}<span>City</span></div>
                        <br />
                        \{{/if}}
                        \{{#if tournamentInfo.creatorFirstName}}
                        <div class="item">\{{tournamentInfo.creatorFirstName}} \{{tournamentInfo.creatorLastName}}<span>Creator Name</span></div>
                        <br />
                        \{{/if}}
                        \{{#if tournamentInfo.golfCourseName}}
                        <div class="item">\{{tournamentInfo.golfCourseName}}<span>Golf Course Name</span></div>
                        <br />
                        \{{/if}}
                        \{{#if tournamentInfo.teeName}}
                        <div class="item">\{{tournamentInfo.teeName}}<span>Tee Name</span></div>
                        <br />
                        \{{/if}}

                        <div class="tournament-item-btm">
                            \{{#if tournamentInfo.startDate}}
                            <div>\{{tournamentInfo.startDate}}</div>
                            \{{/if}}
                            \{{#if tournamentInfo.endDate}}
                            <div>\{{tournamentInfo.endDate}}</div>
                            \{{/if}}
                        </div>
                    </div>
                \{{/each}}
            \{{else}}
                No active tournaments available..
            \{{/if}}
        </script>
        <script type="text/javascript" src="library/js/active-tournaments.js"></script>
    </body>
</html>
